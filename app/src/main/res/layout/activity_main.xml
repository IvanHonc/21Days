<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="78dp"
        android:layout_height="59dp"
        android:background="@color/amarilloClaro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo21" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuNavegacion"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:layout_marginStart="82dp"
        android:background="@color/amarilloClaro"
        app:itemBackground="@color/amarilloClaro"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_superior" />

    <FrameLayout
        android:id="@+id/contenedorFragmentos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuNavegacion"
        app:layout_constraintVertical_bias="1.0">

    </FrameLayout>

    <ImageButton
        android:id="@+id/btSignOutMain"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/transparent"
        android:onClick="signOutOnClick"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_cerrar_sesion" />

</androidx.constraintlayout.widget.ConstraintLayout>